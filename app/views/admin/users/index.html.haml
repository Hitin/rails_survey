= link_to 'Add Admin', new_admin_admin_path
= link_to 'Add Respondent', new_admin_respondent_path
%table.table.table-hover
  %tr
    %th= I18n.t('id')
    %th= User.human_attribute_name(:first_name)
    %th= User.human_attribute_name(:last_name)
    %th= User.human_attribute_name(:type)
    %th= User.human_attribute_name(:email)
    %th= User.human_attribute_name(:phone)
    %th= User.human_attribute_name(:state)
    %th= t('.control')
  - @users.each do |user|
    %tr
      %td= link_to user.id, admin_user_path(user.id), target: :_blank
      %td= user.first_name
      %td= user.last_name
      %td= user.type
      %td= user.email
      %td= user.phone
      %td= user.human_state_name
      %td
        = link_to t('.edit'), edit_admin_user_path(user.id)
        %br
        = link_to t('.in_archive'), in_archive_admin_user_path(user.id), method: :put
        %br
        = link_to t('.Restore'), restore_admin_user_path(user.id), method: :put